{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AviUtl2 目录",
  "mainBinaryName": "AviUtl2_Catalog",
  "version": "0.3.1",
  "identifier": "aviutl2-catalog",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "externalBin": [],
    "targets": ["nsis"],
    "icon": ["icons/icon.svg"],
    "createUpdaterArtifacts": true,
    "licenseFile": "./eula.txt",
    "windows": {
      "certificateThumbprint": null,
      "timestampUrl": null,
      "nsis": {
        "languages": ["Japanese", "SimpChinese", "TradChinese"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico"
      }
    },
    "resources": ["resources/UpdateChecker.aui2"]
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://raw.githubusercontent.com/Neosku/aviutl2-catalog-data/main/aviutl2_catalog_update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDODNBNTVDRjYyNEFDNDcKUldSSHJDVDJYS1dEM09tc09VWjlzVHJaeGo1MFlJMTVOZnBGSTAvOUQ3MUZHTDM1cjZ6akVqWjEK"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["aviutl2-catalog"]
      }
    }
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; img-src 'self' https: data: blob:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost 'self' https: http:;"
    },
    "windows": []
  }
}
